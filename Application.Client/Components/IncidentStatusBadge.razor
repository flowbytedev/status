@using Application.Shared.Enums

@if (Status.HasValue)
{
    <span class="incident-status-badge @GetStatusClass()">
        @GetStatusText()
    </span>
}

@code {
    [Parameter] public IncidentStatus? Status { get; set; }

    private string GetStatusClass()
    {
        return Status switch
        {
            IncidentStatus.Open => "incident-open",
            IncidentStatus.Investigating => "incident-investigating",
            IncidentStatus.Identified => "incident-identified",
            IncidentStatus.Monitoring => "incident-monitoring",
            IncidentStatus.Resolved => "incident-resolved",
            _ => "incident-unknown"
        };
    }

    private string GetStatusText()
    {
        return Status switch
        {
            IncidentStatus.Open => "Open",
            IncidentStatus.Investigating => "Investigating",
            IncidentStatus.Identified => "Identified",
            IncidentStatus.Monitoring => "Monitoring",
            IncidentStatus.Resolved => "Resolved",
            _ => "Unknown"
        };
    }
}

<style>
    .incident-status-badge {
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .incident-open {
        background-color: #fecaca;
        color: #991b1b;
    }

    .incident-investigating {
        background-color: #fed7aa;
        color: #c2410c;
    }

    .incident-identified {
        background-color: #fef3c7;
        color: #92400e;
    }

    .incident-monitoring {
        background-color: #e0e7ff;
        color: #3730a3;
    }

    .incident-resolved {
        background-color: #dcfce7;
        color: #166534;
    }

    .incident-unknown {
        background-color: #f3f4f6;
        color: #374151;
    }
</style>
