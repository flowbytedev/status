@inherits LayoutComponentBase
@using System.Security.Claims
@using Application.Shared.Services.Org
@using Microsoft.AspNetCore.WebUtilities
@inject NavigationManager _navigationManager
@inject AuthenticationStateProvider _authenticationStateProvider
@inject StateContainer _stateContainer
@inject IWorkspaceService _workspaceService



<FluentLayout>
    <FluentHeader>
        Application
        <FluentSpacer />
       
        
        <FluentDesignTheme @bind-Mode="@Mode"
                           @bind-OfficeColor="@OfficeColor"
                           OnLoaded="@OnLoaded"
                           OnLuminanceChanged="@OnLuminanceChanged"
                           StorageName="theme" />
        
            
        
        <FluentButton Appearance="Appearance.Lightweight" >@(_stateContainer.Workspace != null ? _stateContainer.Workspace.Id : "...")</FluentButton>
        
    </FluentHeader>
    
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <div>< /> with 💙 by flowbyte</div>
        <FluentSpacer />
    </FluentFooter>
</FluentLayout>



<FluentMenuProvider />
<FluentToastProvider MaxToastCount="10" @rendermode="@RenderMode.InteractiveWebAssembly" />
<FluentMessageBarProvider />
<FluentDialogProvider @rendermode="@RenderMode.InteractiveWebAssembly" />


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>






@code {

    [CascadingParameter]
    private Task<AuthenticationState>? authenticationState { get; set; }
    private Workspace Workspace { get; set; } = new Workspace();
    private string authMessage = "The user is NOT authenticated.";

    private string? surname;
    private IEnumerable<Claim> claims = Enumerable.Empty<Claim>();

    public DesignThemeModes Mode { get; set; } = DesignThemeModes.Light;
    public OfficeColor? OfficeColor { get; set; }

    void OnLoaded(LoadedEventArgs e)
    {
        Console.WriteLine($"Loaded: {(e.Mode == DesignThemeModes.System ? "System" : "")} {(e.IsDark ? "Dark" : "Light")}");
    }

    void OnLuminanceChanged(LuminanceChangedEventArgs e)
    {
        Console.WriteLine($"Changed: {(e.Mode == DesignThemeModes.System ? "System" : "")} {(e.IsDark ? "Dark" : "Light")}");
    }

    void PickRandomColor()
    {
        OfficeColor = OfficeColorUtilities.GetRandom();
    }

    

    // get the base URL of the application and firts part of the URL after the base url

    protected override async Task OnInitializedAsync()
    {
        var userId = await GetUserId();


        // if user is not authenticated, stop here
        if (userId is null)
        {
            return;
        }


        var stateWorkspace = _stateContainer.Workspace;

        // add ?w=workspace in the url
        var uri = new Uri(_navigationManager.Uri);
        var query = uri.Query;
        
        // check if url contains ?w=x
        if (QueryHelpers.ParseQuery(query).TryGetValue("w", out var workspaceId))
        {
            var workspace = await _workspaceService.GetWorkspace(workspaceId);

            _stateContainer.Workspace = workspace;
            
        }

        else
        {
            var workspace = await GetUserDefaultWorkspace(userId);
            if(workspace is null)
            {
                return;
            }

            _stateContainer.Workspace = workspace;

                // add ?w=x to the url
                var newUri = QueryHelpers.AddQueryString(uri.AbsoluteUri, "w", workspace.Id);

                _navigationManager.NavigateTo(newUri);

            
        }

        if(stateWorkspace is null)
        {
            var workspace = await GetUserDefaultWorkspace(userId);

            _stateContainer.Workspace = workspace;
            
        }
        
        _stateContainer.OnChange += StateHasChanged;


    }

    




    private async Task<Workspace> GetUserDefaultWorkspace(string userId)
    {
        var workspaces = new List<Workspace>();
        try {

            workspaces = await _workspaceService.GetWorkspaces(userId);
        }
        catch(InvalidOperationException e)
        {
            Console.WriteLine(e.Message);
        }
        

        // // get the first workspace
        return workspaces?.FirstOrDefault() ?? new Workspace();
    }






    private async Task<string> GetUserId()
    {
        var authState = await _authenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity is not null && user.Identity.IsAuthenticated)
        {
            return user.FindFirst(c => c.Type == ClaimTypes.NameIdentifier)?.Value;
        }

        return null;


    }


}